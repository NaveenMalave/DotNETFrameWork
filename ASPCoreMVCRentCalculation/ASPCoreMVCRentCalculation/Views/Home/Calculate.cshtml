@model ASPCoreMVCRentCalculation.Models.RentCalculation

@{
    ViewData["Title"] = "Calculate";
}

<h1>Calculate</h1>

<div>
    <h4>RentCalculation</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
           Owner :
        </dt>
        <dd class = "col-sm-10">
            @ViewBag.Name
        </dd>
        <dt class = "col-sm-2">
           Cost Per day:
        </dt>
